                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_pkt"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/bg_pkt"
                        app:shapeAppearanceOverlay="@style/Roundimageview"/>

                    <TextView
                        android:id="@+id/text_e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ภูเก็ต"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_cpn"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/bg_cpn"
                        app:shapeAppearanceOverlay="@style/Roundimageview"/>

                    <TextView
                        android:id="@+id/text_w"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ชุมพร"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_nrt"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/bg_nrt"
                        app:shapeAppearanceOverlay="@style/Roundimageview"/>

                    <TextView
                        android:id="@+id/text_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="นครศรีธรรมราช"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_pna"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/bg_pna"
                        app:shapeAppearanceOverlay="@style/Roundimageview"/>

                    <TextView
